<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.homepage.dto.Musical">
	
	<select id="getCurrentMusicals" parameterType="basicMusicalMap">
		select #{MUSICAL_POSTER}, #{MUSICAL_TITLE} from MUSICALS order by START_DATE
	</select>
	
	<select id="getPastMusicals" parameterType="basicMusicalMap">
		select  from MUSICALS order by START_DATE
	</select>
	
	<select id="getFutureMusicals" parameterType="basicMusicalMap">
		select #{MUSICAL_TITLE} from MUSICALS order by START_DATE
	</select>
	
	<resultMap type="members" id="twoMusicalMap">
		<id column="MUSICAL_TITLE" property="id"/>
		<result column="name" property="name"/>
		<result column="pass" property="pass"/>
		<result column="age" property="age"/>
		<result column="email" property="email"/>
		<result column="pic" property="pic"/>
		<result column="regDate" property="regDate"/>
	</resultMap>

</mapper>