<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace = "com.homepage.dto.Comments">
	
	<insert id = "insert" parameterType="comments">
		insert into comments 
		values(#{commentId}, #{commentRating}, #{userId}, 
		#{commentContent}, #{musicalTitle}, #{regDate})
	</insert>
	
	<delete id = "delete" parameterType="int">
		delete from comments where comment_No=#{commentNo}
	</delete>

</mapper>

